<!doctype html>

<html lang="pt-br">

  <head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="./home.css">

    <link rel="stylesheet" href="./excluir.css">

    <title>Tmk</title>

  </head>

  <body>

   <header>

      <img src="./logo.jpg" width="50" height="50">

    </header>

    <form method="POST" action="/logout" class= userInfo>

      <label for="usuario">Logado como: {{usuario}} </label> 

      <button type="submit" id="btnSair" style="background-color: red">Sair</button>

    </form>

    <div>
    
      <button onClick="goToExcluir()" id="btnNavExcluir" style="background-color: red" class="button">Ir para deleção</button>

      <button onClick="goToEditar()" id="btnNavEditar" style="background-color: grey" class="button">Ir para edição</button>
    
    </div>
   

    <h1>Criação de Páginas</h1>

    <form method="POST" action="/criar" class= criarPagina>

      <label for="url">URL da página:</label>

      <input type="text" name="url" id="url">

      <br><br>

      <label for="header">Header da página:</label>
      
      <input type="text" name="header" id="header">

      <br><br>

      <label for="headerColor">Cor do header</label>
      <input type="color" id="headerColor" name="headerColor" value="#FFA500" />

      <br><br>
        

      <label for="main">Main da página:</label>
      
      <input type="main" name="main" id="main">

      <br><br>

      <label for="footer">Footer da página:</label>
      
      <input type="text" name="footer" id="footer">

      <br><br>

      <label for="headerColor">Cor do footer</label>
      <input type="color" id="footerColor" name="footerColor" value="#a06800" />

      <br><br>

      <button type="submit" id="btnEntrar">Enviar</button>

    </form>

    {{#aviso}}

      <h3 id="aviso">{{aviso}}</h3>
      
    {{/aviso}}

    <div class=paginas>

      {{#todasPaginas.paginaNova}}

        <h2>Páginas existentes</h2>

        <div class=conteudo>

          <a href="http://localhost:3000/posts/{{url}}" target="_blank">{{url}}</a>
          
        </div>

      {{/todasPaginas.paginaNova}}

      {{^todasPaginas.paginaNova}}
      
        <h2>Não existe páginas</h2>
      
      {{/todasPaginas.paginaNova}}
    </div>

    <script>
      function goToExcluir() {
        window.location.href = "/excluir"
      }

      function goToEditar() {
        window.location.href = "/editar"
      }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
  </body>

</html>