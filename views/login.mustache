<!doctype html>

<html lang="pt-br">

  <head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>

      body{

        margin: 0;

        display: flex;

        flex-direction: column;

        align-items: center;

      }

      header {

        background-color: #FFA500;

        color: white;

        text-align: center;

        padding: 3px;

        margin-bottom: 50px;

        font-family: monospace;

        width: 100%;

      }

      form{

        display: flex;

        flex-direction: column;

        align-items: center;

      }

      form label{

        font-size: 20px;

        text-align: left;

        width: 310px;

        font-family: monospace;

      }

      form input{

        font-size: 20px;

        text-align: left;

        width: 300px;

        font-family: monospace;

        padding: 5px;

      }

      form button{

        margin: 5px;

        font-size: 20px;

        width: 100px;

        border-radius: 5px;

        font-family: monospace;

        padding: 5px;

        background-color: #FFA500;

        color: white;

        border: none;

        cursor: pointer;

        transition: 0.3s;

      }

      form button:hover{

        transform: scale(1.1);

      }

      #aviso{

        margin-top: 20px;

        font-size: 20px;

        font-family: monospace;

      }

    </style>

    <title>CMS</title>

  </head>

  <body>

    <header>

      <h1>CMS</h1>

    </header>

    <form method="POST" action="/login">

      <label for="usuario">Usu√°rio:</label>

      <input type="text" name="usuario" id="usuario">

      <br><br>

      <label for="senha">Senha:</label>

      <input type="password" name="senha" id="senha">

      <br><br>

      <button type="submit" id="btnEntrar">Entrar</button>

    </form>

    <form method="POST" action="/logout">

      <button type="submit" id="btnSair" style="background-color: red">Sair</button>

    </form>

    {{#aviso}}

      <h3 id="aviso">{{aviso}}</h3>

    {{/aviso}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
  </body>

</html>