<!doctype html>

<html lang="pt-br">

  <head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="./home.css">

    <link rel="stylesheet" href="./excluir.css">

    <title>Tmk</title>

  </head>

  <body>

   <header>

      <img src="./logo.jpg" width="50" height="50">

    </header>

    <form method="POST" action="/logout" class= userInfo>

      <label for="usuario">Logado como: {{usuario}} </label> 

      <button type="submit" id="btnSair" style="background-color: red">Sair</button>

    </form>

    <div>
    
        <button onClick="goToExcluir()" id="btnNavExcluir" style="background-color: red" class="button">Ir para deleção</button>

        <button onClick="goToCriar()" id="btnNavCriar" style="background-color: green" class="button">Ir para criação</button>
    
    </div>
   

    <h1>Edição de Páginas</h1>

    <form method="POST" action="/editar" class= criarPagina>

      <label for="url">URL da página para alterar:</label>

      <input type="text" name="url" id="url">

      <br><br>

      <label for="header">Novo header da página:</label>
      
      <input type="text" name="header" id="header">

      <br><br>

      <label for="main">Nova main da página:</label>
      
      <input type="main" name="main" id="main">

      <br><br>

      <label for="footer">Novo footer da página:</label>
      
      <input type="text" name="footer" id="footer">

      <br><br>

      <button type="submit" id="btnEditar" style="background-color: grey">Salvar</button>

    </form>

    {{#aviso}}

      <h3 id="aviso">{{aviso}}</h3>
      
    {{/aviso}}

    <h2>Páginas existentes</h2>

    <div class=paginas>

      {{#todasPaginas.paginaNova}}

        <div class=conteudo>

          <a href="http://localhost:3000/{{url}}" target="_blank">{{url}}</a>
          
        </div>

      {{/todasPaginas.paginaNova}}

    </div>

    <script>
      function goToExcluir() {
        window.location.href = "/excluir"
      }

      function goToCriar() {
        window.location.href = "/home"
      }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
  </body>

</html>